root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.swift]
indent_size = 4
tab_width = 4
# Xcode 16 doesn't support automatic line wrapping; this only affects the reformatting guide line
max_line_length = 120
